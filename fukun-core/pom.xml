<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.fukun</groupId>
    <artifactId>fukun-core</artifactId>
    <version>${parent.version}</version>
    <packaging>pom</packaging>
    <name>fukun-core</name>
    <description>fukun-core</description>

    <modules>
        <module>fukun-core-consul</module>
        <module>fukun-core-zuul</module>
        <module>fukun-core-gateway</module>
        <module>fukun-core-config</module>
    </modules>

    <properties>
        <lombok.version>1.16.18</lombok.version>
        <parent.version>1.0.0-SNAPSHOT</parent.version>
        <finchley.version>Finchley.SR2</finchley.version>
        <spring.boot.version>2.0.6.RELEASE</spring.boot.version>
    </properties>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.0.6.RELEASE</version>
    </parent>

    <!--依赖管理，用于管理spring-cloud的依赖 -->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${finchley.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>